<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_add_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddListActivity"
    android:background="#f3f2f7"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp" >
        <TextView
            android:id="@+id/tv_header_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="normal"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true" />
        <TextView
            android:id="@+id/tv_header_complete"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="완료"
            android:textColor="#999999"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_add_list_image"
        android:padding="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/circle_black"
        android:src="@drawable/ic_baseline_menu_24"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:id="@+id/et_add_list_title"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/list_bg"
        android:gravity="center"
        android:textStyle="normal"
        android:textSize="24sp"
        android:textColor="#333333" >
        <requestFocus/>
    </EditText>

    <LinearLayout
        android:id="@+id/ll_color_1"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:tag="RED"
            android:onClick='changeColor'
            android:layout_height="wrap_content"
            android:padding="5dp">
            <ImageButton
                android:clickable="false"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_red" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:padding="5dp"
            android:tag="ORANGE"
            android:onClick='changeColor'>
            <ImageButton
                android:clickable="false"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_orange" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:padding="5dp"
            android:tag="SALGU"
            android:onClick='changeColor' >
            <ImageButton
                android:clickable="false"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_salgu" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:padding="5dp"
            android:tag="LIGHT_GREEN"
            android:onClick='changeColor' >
            <ImageButton
                android:clickable="false"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_light_green" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:padding="5dp"
            android:tag="GREEN"
            android:onClick='changeColor' >
            <ImageButton
                android:clickable="false"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_green" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:padding="5dp"
            android:tag="SKYBLUE"
            android:onClick='changeColor' >
            <ImageButton
                android:clickable="false"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_skyblue" />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_color_2"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:padding="5dp"
            android:tag="BLUE"
            android:onClick='changeColor' >
            <ImageButton
                android:clickable="false"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_blue" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:padding="5dp"
            android:tag="PURPLE"
            android:onClick='changeColor' >
            <ImageButton
                android:clickable="false"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_purple" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:padding="5dp"
            android:tag="GREY"
            android:onClick='changeColor' >
            <ImageButton
                android:clickable="false"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_grey" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:padding="5dp"
            android:tag="BLACK"
            android:onClick='changeColor' >
            <ImageButton
                android:clickable="false"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_black" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:padding="5dp"
            android:tag="LIGHT_BROWN"
            android:onClick='changeColor' >
            <ImageButton
                android:clickable="false"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_light_brown" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:padding="5dp"
            android:tag="BROWN"
            android:onClick='changeColor' >
            <ImageButton
                android:clickable="false"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_brown" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>